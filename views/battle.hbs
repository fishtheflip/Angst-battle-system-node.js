{{#if battles.length}}
<div class="row">
    {{#each battles}}

  <div class="col-sm-6">
    <div class="card main-bat">
      <div class="card-body">
          <div class="battle-card"> 
            <h5 class="card-title btn btn-danger disabled">{{red}}</h5>
            
            <h5 class="card-title btn btn-info disabled">{{blue}}</h5>
          </div>

        <a href="/angsyst/{{id}}/edit?allow=true" class="btn btn-primary">Go to Platform</a>
      </div>
    </div>
  </div>

  {{/each}}
</div>
{{else}}
<div class="no-battles">
  
  <h1>No Battles</h1>
  
</div>

{{/if}}


{{#if results.length}}
<div class="row">
    {{#each results}}

  <div class="col-sm-6 ">
    <div class="card main-block">
      <div class="card-body">
          <div class="battle-card"> 
            <h5 class="card-title btn btn-danger disabled shadow">{{red}}</h5>
            
            <h5 class="card-title btn btn-info disabled shadow" >{{blue}}</h5>
          </div>

            <div class="card-body middle-card">
              <h3>Winner is <span class="winner-res">{{win}} </span> <span>üèÜ</span></h3>

            </div>

              <div class="card-body main-score">
                <h3>Score</h3>
                <div class="score">
                <div><span>{{redscore}}</span></div>
                <div><span>  :  </span></div>
                <div><span>{{bluescore}}</span></div>
                </div>
            </div>

        <a href="#" class="btn btn-primary">View</a>
      </div>
    </div>
  </div>

  {{/each}}
</div>
{{else}}
<div class="no-battles"><h1>No Battles</h1></div>

{{/if}}